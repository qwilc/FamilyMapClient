<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name_person_activity"/>

        <TextView
            android:id="@+id/person_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sheila"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name_person_activity"/>

        <TextView
            android:id="@+id/person_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Parker"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_person_activity"/>

        <TextView
            android:id="@+id/person_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Female"/>

    </LinearLayout>

<ExpandableListView
    android:id="@+id/expandableListView"
    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
    android:dividerHeight="0.5dp"
    android:divider="@android:color/darker_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>